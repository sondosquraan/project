<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnsbmit5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:background="@android:color/white"
        android:onClick="btnSubmit_Click"
        android:text="Home"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnsbmit6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:onClick="btnSubmit_Click"
        android:text="Menu" />

    <Button
        android:id="@+id/btnsbmit7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:onClick="btnSubmit_Click"
        android:text="AboutUs" />

    <Button
        android:id="@+id/btnsbmit2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:onClick="btnSubmit_Click"
        android:text="Location" />

    <Button
        android:id="@+id/btnsbmit3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:onClick="btnSubmit_Click"
        android:text="Gallary" />

    <Button
        android:id="@+id/btnsbmit4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:onClick="btnSubmit_Click"
        android:text="Contact" />

</LinearLayout>